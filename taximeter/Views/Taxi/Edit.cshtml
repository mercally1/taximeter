@model taximeter.Entity.Taxi

@{
    ViewData["Title"] = "Edit";
}

<h1>Editar Taxi</h1>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="TaxiId" />
            <div class="form-group">
                <label asp-for="ConductorId" class="control-label"></label>
                <select asp-for="ConductorId" class="form-control" asp-items="ViewBag.ConductorId"></select>
                <span asp-validation-for="ConductorId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Placa" class="control-label"></label>
                <input asp-for="Placa" class="form-control" />
                <span asp-validation-for="Placa" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Marca" class="control-label"></label>
                <input asp-for="Marca" class="form-control" />
                <span asp-validation-for="Marca" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Model" class="control-label"></label>
                <input asp-for="Model" class="form-control" />
                <span asp-validation-for="Model" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Anho" class="control-label"></label>
                <input asp-for="Anho" class="form-control" />
                <span asp-validation-for="Anho" class="text-danger"></span>
            </div><br>
            <div class="form-group">
                <input type="submit" value="Guardar" class="btn btn-primary" />
                <a asp-action="Index"><input type="submit" value="Volver a la lista" class="btn btn-info"></a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
