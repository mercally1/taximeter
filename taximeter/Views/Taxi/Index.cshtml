@model IEnumerable<taximeter.Entity.Taxi>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Crear Nuevo Taxi</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Placa)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Marca)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Model)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Anho)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Conductor)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Placa)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Marca)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Model)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Anho)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Conductor.Apellido)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.TaxiId">Editar</a> |
                <a asp-action="Details" asp-route-id="@item.TaxiId">Detalles</a> |
                <a asp-action="Delete" asp-route-id="@item.TaxiId">Borrar</a>
            </td>
        </tr>
}
    </tbody>
</table>
