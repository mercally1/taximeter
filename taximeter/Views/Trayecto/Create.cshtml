@model taximeter.Entity.Trayecto

@{
    ViewData["Title"] = "Create";
}

<h1>Crear Trayecto</h1>

<h4></h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Crear">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Ubicacion_Inicial" class="control-label"></label>
                <input asp-for="Ubicacion_Inicial" class="form-control" />
                <span asp-validation-for="Ubicacion_Inicial" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Ubicacion_Final" class="control-label"></label>
                <input asp-for="Ubicacion_Final" class="form-control" />
                <span asp-validation-for="Ubicacion_Final" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Kilometraje" class="control-label"></label>
                <input asp-for="Kilometraje" class="form-control" />
                <span asp-validation-for="Kilometraje" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TaxiId" class="control-label"></label>
                <select asp-for="TaxiId" class ="form-control" asp-items="ViewBag.TaxiId"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Crear Trayecto" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Volver a la tabla</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
